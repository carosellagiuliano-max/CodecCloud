{
  "type": "module",
  "scripts": {
    "verify": "pnpm lint && pnpm typecheck && pnpm test",
    "verify:web": "pnpm lint",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "e2e": "playwright test",
    "i18n:check": "node scripts/i18n-check.mjs",
    "build:openapi": "tsx scripts/build-openapi.ts",
    "openapi:types": "pnpm run build:openapi",
    "prepare:pr": "node scripts/prepare-pr.mjs",
    "dev:outbox": "node scripts/dev-worker.mjs"
  },
  "dependencies": {
    "openapi3-ts": "^4.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/uuid": "^9.0.7",
    "eslint": "^9.13.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  }
}
